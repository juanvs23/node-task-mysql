extends ../layout

block contenido
    .header.bg-primary.pb-6
      
    .content.contenido-principal.container
        if errors
           .errors-container
                each val in errors
                    .alert.alert-danger.alert-dismissible.fade.show(role="alert")
                        span.alert-icon
                            i.fa.fa-times-circle
                        span.alert-text
                            strong Alerta |  #{val.texto}
                        button.close(type="button", data-dismiss="alert", aria-label="Close")
                            span(aria-hidden="true") Ã—

        
        .row.justify-content-center
            form(action="/nuevo-proyecto", method="post",id="form-proyect",class="col-md-6")
                h1(class="text-center display-2") Nuevo Proyecto
                div(class="form-group")
                    label(for="name"  id="name-label"  class="form-control-label") Nombre del proyecto 
                    input(class="form-control form-control-alternative" type="text" placeholder="Nombre del proyecto aqui" id="name" name="name")
                .form-row
                    .col-md-6
                        .form-group
                            label.form-control-label(for="example-date-input") Fecha de inicio
                            input.form-control.form-control-alternative.dates#fecha-inicio(type="date", data-date-format="dd/mm/yyyy", name="startDate")
                    .col-md-6
                        .form-group
                            label.form-control-label(for="example-date-input") Fecha Limite
                            input.form-control.form-control-alternative.dates#fecha-fin(type="date", data-date-format="dd/mm/yyyy" , name="enddate")
                .form-group
                    .form-row.justify-content-center
                        button.btn.btn-success.btn-lg.btn-block(type="Submit") 
                            i.ni.ni-send
                            span  Enviar
        .container.container-back.pd-6
            a(href="/" class="regresar")
                i.fa.fa-chevron-left
                span  Regresar


                   
                